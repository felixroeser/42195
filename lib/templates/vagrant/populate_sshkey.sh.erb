<%- @realm.users.each do |username, userhash| %>
sudo -u <%= username %> mkdir -p <%= userhash['home'] %>/.ssh
sudo -u <%= username %> chmod 700 <%= userhash['home'] %>/.ssh
sudo -u <%= username %> echo '<%= userhash['public_key'] %>' >> <%= userhash['home'] %>/.ssh/authorized_keys
sudo -u <%= username %> chmod 600 <%= userhash['home'] %>/.ssh/authorized_keys
<%- end -%>